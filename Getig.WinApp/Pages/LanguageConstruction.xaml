<Page x:Class="Getig.WinApp.LanguageConstruction"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Getig.WinApp"
      mc:Ignorable="d"
      Title="Language Construction"
      Height="640"
      Width="840">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Style="{StaticResource LblH1}">Languages</Label>
        <StackPanel Grid.Row="1">
            <StackPanel Orientation="Horizontal">
                <Label>Language Options:</Label>
                <StackPanel>
                    <Button Click="OnCreateLanguage" >Create Language</Button>
                    <Button>Edit Language</Button>
                    <Button>Delete Language</Button>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>