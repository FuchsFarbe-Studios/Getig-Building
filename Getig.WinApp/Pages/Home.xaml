<Page x:Class="Getig.WinApp.Pages.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Getig.WinApp.Pages"
      mc:Ignorable="d"
      Title="Home" Width="1024" Height="768" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Style="{StaticResource LblH1}">Home Page</Label>
        <TextBlock Grid.Row="1" Margin="5" Padding="5" Background="Silver" Text="This is the home page for the Getig World Building Application.
        Created by FuchsFarbe Studios" Name="TxtBlockHome"/>
    </Grid>
</Page>